<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- Aqui se agregan las vistas que usarÃ¡n los controllers para generar jasper reports. -->
     <bean id="repGafete"
           class="org.springframework.web.servlet.view.jasperreports.JasperReportsPdfView">
        <property name="url" value="/WEB-INF/classes/mx/sep/sesi/reportes/credencial.jasper"/>
        <property name="reportDataKey" value="dataSourceKey"/>
        <property name="headers">
            <props>
                <prop key="Content-Disposition">        
                    attachment; filename=repGafete.pdf
                </prop>
            </props>
        </property>
    </bean>
</beans>