        personaVO.setEmergencia(emergencia);
        personaVO.setAlergia(Alergia);
        personaVO.setEnfermedad(enfermedad);
        String response = personaService.insertaEmpleado(personaVO);
        return "{\"msg\":\""+response+"\"}"; 
    }
    
